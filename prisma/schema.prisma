datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id            String      @id @default(uuid())
  name          String
  email         String      @unique
  password_hash String
  date_birth    DateTime
  created_at    DateTime    @default(now())

  userPlaces    UserPlace[]
  places        Place[] 
}

model Place {
    id         String    @id @default(uuid()) 
    name       String
    location   String
    opinion    String?
    userId     String      
    user       User      @relation(fields: [userId], references: [id]) 
    categoryId String
    category   Category  @relation(fields: [categoryId], references: [id], name: "CategoryToPlace")
    userPlaces UserPlace[]
}


model UserPlace {
  userId     String
  placeId    String
  visited    Boolean
  active     Boolean  // Indica se o lugar é "ativo" para o usuário (se ele deseja ir lá ou já foi)
  user       User     @relation(fields: [userId], references: [id])
  place      Place    @relation(fields: [placeId], references: [id])

  @@id([userId, placeId]) // Chave composta para garantir que a relação seja única
}

model Category {
    id     String   @id @default(uuid())
    name   String   @unique
    places Place[] @relation("CategoryToPlace")
}

